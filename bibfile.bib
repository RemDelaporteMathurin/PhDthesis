	author = {Chen, Chao-Shou and Dasgupta, Dwaipayan and Weerasinghe, Asanka and Wirth, Brian D. and Maroudas, Dimitrios},
	month = nov,
	year = {2020},
	note = {Publisher: IOP Publishing},
	keywords = {mechanical properties},
	pages = {016016},
}

