@article{pecovnik_influence_2019,
	title = {Influence of grain size on deuterium transport and retention in self-damaged tungsten},
	volume = {513},
	issn = {0022-3115},
	url = {http://www.sciencedirect.com/science/article/pii/S0022311518307256},
