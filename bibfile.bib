@article{forsberg_fusion_2020,
	title = {Fusion {Blankets} and {Fluoride}-{Salt}-{Cooled} {High}-{Temperature} {Reactors} with {Flibe} {Salt} {Coolant}: {Common} {Challenges}, {Tritium} {Control}, and {Opportunities} for {Synergistic} {Development} {Strategies} {Between} {Fission}, {Fusion}, and {Solar} {Salt} {Technologies}},
